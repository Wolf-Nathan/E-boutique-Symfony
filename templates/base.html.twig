<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" type="image/png" href="{{ asset('images/logoBoutique.png') }}" />
    {% block stylesheets %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
    {% endblock %}
</head>

{% block header %}
    <div class="jumbotron">
        <div class="container">
            <nav class="menu mb-4">
                {% if app.user %}
                    <span class="pseudo">Bonjour {{ app.user.prenom }} {{ app.user.nom }}</span>
                {% endif %}
                <ul class="list-unstyled row pl-0">
                    <li><a href="{{ path('jeux_list') }}">Jeux</a></li>
                    {#<li><a href="{{ path('console_list') }}">Consoles</a></li>#}
                    <li><a href="{{ path('console_modele_list') }}">Consoles</a></li>
                    <li><a href="{{ path('marque_list') }}">Marques</a></li>
                    <li><a href="{{ path('index') }}"><img src="{{ asset('images/logoBoutique.png') }}" alt="boutique-logo"></a></li>
                    {#<li><a href="{{ path('console_modele_list') }}">Modèles de console</a></li>#}
                    {% if app.user %}
                        <li><a href="{{ path('profil') }}">Profil</a></li>
                        <li><a href="{{ path('logout') }}">Se déconnecter</a></li>
                    {% else %}
                        <li><a href="{{ path('register') }}">S'inscrire</a></li>
                        <li><a href="{{ path('login') }}">Se connecter</a></li>
                    {% endif %}
                    <li><a href="{{ path('panier') }}">Panier</a></li>
                </ul>
            </nav>
        </div>
    </div>
{% endblock header %}
<body>
    {% block body %}{% endblock %}
    {% block javascripts %}{% endblock %}
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>

{% block footer %}
    <p class="copyright">Site réalisé par Nathan Wolf pour le cours de Symfony de M. Nollet.</p>
{% endblock footer %}
</html>