{% extends 'base.html.twig' %}

{% block title %}Console index{% endblock %}

{% block body %}
    <h1>Console index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Marque</th>
                <th>Jeux</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for console in consoles %}
            <tr>
                <td>{{ console.id }}</td>
                <td>{{ console.nom }}</td>
                <td>{{ console.marque }}</td>
                <td>
                    {% for key,jeu in console.jeux %}
                        {% if key > 0 %}
                        ,
                        {% endif %}
                        {{ jeu }}
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('console_show', {'id': console.id}) }}">show</a>
                    <a href="{{ path('console_edit', {'id': console.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune console trouv√©e !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('console_new') }}">Create new</a>
{% endblock %}
