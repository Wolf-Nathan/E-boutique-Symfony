{% extends 'base.html.twig' %}

{% block title %}Jeux index{% endblock %}

{% block body %}
    <h1>Jeux index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Age recommandé</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Consoles</th>
                <th>Marque</th>
                <th>Date de sortie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for jeux in jeuxes %}
            <tr>
                <td>{{ jeux.id }}</td>
                <td>{{ jeux.nom }}</td>
                <td>{{ jeux.ageMini }}</td>
                <td>{{ jeux.description }}</td>
                <td>{{ jeux.prix }}€</td>
                <td>
                    {%  for key, console in jeux.console %}
                        {% if key > 0 %}
                         ,
                        {% endif %}
                        {{ console }}
                    {% endfor %}
                </td>
                <td>{{ jeux.marque }}</td>
                <td>{{ jeux.dateSortie ? jeux.dateSortie|date('d-m-Y') : '' }}</td>
                <td>
                    <a href="{{ path('jeux_show', {'id': jeux.id}) }}">show</a>
                    <a href="{{ path('jeux_edit', {'id': jeux.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('jeux_new') }}">Create new</a>
{% endblock %}
