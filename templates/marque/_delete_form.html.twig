<form method="post" action="{{ path('marque_delete', {'id': marque.id}) }}" onsubmit="return confirm('Etes-vous sur de vouloir supprimer cette marque?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ marque.id) }}">
    <button class="btn admin-link">Supprimer la marque</button>
</form>
