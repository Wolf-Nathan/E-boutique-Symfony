{% extends 'base.html.twig' %}

{% block title %}Validation Panier - Etape 2{% endblock %}

{% block body %}
    <div class="container">
        {% if app.user %}
            {% if commande %}
                <h1>Commande validée</h1>
                <a class="cart-final-link" href="{{ path('profil') }}">
                    <h3>Accéder à votre profil</h3>
                </a>
                <a class="cart-final-link" href="{{ path('index') }}">
                    <h3>Retourner à l'accueil.</h3>
                </a>
            {% else %}
                <h1>Une erreur s'est produite veuillez nous excuser</h1>
            {% endif %}
        {% else %}
            <h1>Vous n'êtes pas autorisé à accéder à cette page.</h1>
        {% endif %}
    </div>
{% endblock %}